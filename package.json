{
  "name": "rest-verification",
  "publisher": "siatoolsuit",
  "repository": {
    "url": "https://github.com/siatoolsuit/siarest-vscode"
  },
  "description": "A language server for rest endpoint verification",
  "license": "MIT",
  "version": "0.1.0",
  "main": "./client/dist/extension",
  "engines": {
    "vscode": "^1.22.0"
  },
  "activationEvents": [
    "onCommand:sia-rest.createConfig",
    "onCommand:sia-rest.restart",
    "onLanguage:typescript",
    "onLanguage:json"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "Using ESLint is not possible in virtual workspaces."
    },
    "untrustedWorkspaces": {
      "supported": false,
      "description": "The extension requires workspace trust because it loads configuration files and code from the workspace and executes it."
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "sia-rest.createConfig",
        "title": "Create config",
        "category": "Siarc"
      },
      {
        "command": "sia-rest.restart",
        "title": "Restart siarc service",
        "category": "Siarc"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".siarc.json",
        "url": "./server/src/analyzer/config/config.schema.json"
      }
    ],
    "languages": [
      {
        "id": "siarc",
        "extensions": [
          ".siarc.json"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
    "webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
    "compile": "npm run clean && tsc -b",
    "clean": "rm -rf ./server/dist && rm -rf ./client/dist",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "merge-options": "^3.0.4",
    "mocha": "^8.3.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.3.5",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0"
  },
  "dependencies": {}
}
