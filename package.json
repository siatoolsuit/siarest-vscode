{
  "name": "rest-verification",
  "publisher": "siatoolsuit",
  "repository": {
    "url": "https://github.com/siatoolsuit/siarest-vscode"
  },
  "description": "A language server for rest endpoint verification",
  "license": "MIT",
  "version": "1.0.0",
  "main": "./client/dist/extension",
  "engines": {
    "vscode": "^1.22.0"
  },
  "activationEvents": [
    "onCommand:sia-rest.createConfig",
    "onLanguage:typescript",
    "onLanguage:json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sia-rest.createConfig",
        "title": "sia: create config"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".siarc.json",
        "url": "./server/src/analyzer/config/config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run clean && tsc -b",
    "clean": "rm -rf ./server/dist && rm -rf ./client/dist",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {}
}
